{
  "name": "pico-ml",
  "version": "0.2.0",
  "description": "A toy programming language",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": {
    "pico-ml": "./bin/cli.js"
  },
  "scripts": {
    "clean": "rimraf tsconfig.tsbuildinfo lib",
    "build": "tsc",
    "test": "jest",
    "start": "ts-node src/cli/index.ts",
    "prettier": "prettier \"src/**/*.ts\" \"*.{js,json,md}\"",
    "format": "npm run prettier -- --write",
    "lint": "npm run prettier -- --check",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "keywords": [
    "ml",
    "language"
  ],
  "author": "Quramy",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.21",
    "@types/node": "^14.14.35",
    "husky": "^5.2.0",
    "jest": "^26.6.3",
    "pinst": "^2.1.6",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    },
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(src/.*\\.test)\\.ts$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "\\.d\\.ts$",
      "lib/.*"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "json"
    ]
  }
}
