{
  "name": "pico-ml",
  "version": "0.12.0",
  "description": "A toy programming language witch is a subset of OCaml",
  "type": "commonjs",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": {
    "pico-ml": "./bin/repl.js",
    "pico-mlc": "./bin/compiler.js",
    "ipml": "./bin/repl.js",
    "pmlc": "./bin/compiler.js"
  },
  "files": [
    "lib",
    "lib-esm"
  ],
  "exports": {
    ".": {
      "require": "./lib/index.js",
      "browser": "./lib-esm/index.js",
      "default": "./lib/index.js"
    }
  },
  "scripts": {
    "clean": "rimraf \"*.tsbuildinfo\" lib lib-esm",
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -p .",
    "build:esm": "tsc -p tsconfig.esm.json",
    "depgraph": "dependency-cruise --config .depcruise.config.js -T dot lib/cli/repl.js lib/cli/compiler.js | dot -T svg > depgraph.svg",
    "test": "jest",
    "start": "ts-node src/cli/index.ts",
    "prettier": "prettier \"src/**/*.ts\" \"playground/**/*\" \"*.{js,json,md}\"",
    "format": "npm run prettier -- --write",
    "lint": "npm run prettier -- --check",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "keywords": [
    "ml",
    "language",
    "wasm",
    "compiler"
  ],
  "author": "Quramy",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Quramy/pico-ml.git"
  },
  "devDependencies": {
    "@types/jest": "27.4.0",
    "@types/node": "16.11.17",
    "dependency-cruiser": "11.2.1",
    "husky": "7.0.4",
    "jest": "27.4.5",
    "pinst": "2.1.6",
    "prettier": "2.5.1",
    "pretty-quick": "3.1.3",
    "rimraf": "3.0.2",
    "ts-jest": "27.1.2",
    "ts-node": "10.4.0",
    "typescript": "4.5.4"
  }
}
