{
  "name": "copl-ts",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "bin": {
    "copl-ts": "./bin/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "start": "ts-node src/cli/index.ts",
    "prettier": "prettier \"src/**/*.ts\" \"*.{js,json,md}\"",
    "format": "npm run prettier -- --write",
    "lint": "npm run prettier -- --check",
    "postinstall": "husky install"
  },
  "keywords": [
    "ml",
    "language"
  ],
  "author": "Quramy",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.32",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.3",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3",
    "husky": "^5.1.3",
    "pretty-quick": "^3.1.0"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    },
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(src/.*\\.test)\\.ts$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "\\.d\\.ts$",
      "lib/.*"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "json"
    ]
  }
}
